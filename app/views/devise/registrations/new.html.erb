<% content_for :link_structure do %>
    <%= link_to 'HOME', root_path, class: 'active' %>
    <%= link_to 'HOW IT WORKS', about_path %>
<% end %>

<%= render 'partials/navbar' %>

<div class="content">
  <h2>Let's begin the adventure...</h2>

  <div class="center-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= form.email_field :email, autofocus: true, placeholder: 'Email' %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br>
          <%= form.password_field :password, autocomplete: 'off', placeholder: 'Password' %>
        </div>

        <div class="field">
          <%= form.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Confirm Password' %>
        </div>

        <div class="actions">
          <%= form.submit 'Sign up' %>
        </div>
    <% end %>
  </div>

  <div class="shared-links">
    <%= render 'devise/shared/links' %>
  </div>
</div>